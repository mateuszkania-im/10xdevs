---
// Definicja typu FooterLink zgodnie z planem implementacji
interface FooterLink {
  href: string;
  label: string;
}

// Definicja typu dla kategorii linków
interface FooterCategory {
  title: string;
  links: FooterLink[];
}

interface Props {
  categories?: FooterCategory[];
}

// Domyślne kategorie linków
const defaultCategories: FooterCategory[] = [
  {
    title: "Produkt",
    links: [
      { href: "/funkcje", label: "Funkcje" },
      { href: "/cennik", label: "Cennik" },
      { href: "/dla-firm", label: "Dla firm" },
      { href: "/faq", label: "FAQ" }
    ]
  },
  {
    title: "Firma",
    links: [
      { href: "/o-nas", label: "O nas" },
      { href: "/blog", label: "Blog" },
      { href: "/kariera", label: "Kariera" },
      { href: "/kontakt", label: "Kontakt" }
    ]
  },
  {
    title: "Informacje prawne",
    links: [
      { href: "/warunki", label: "Warunki korzystania" },
      { href: "/prywatnosc", label: "Polityka prywatności" },
      { href: "/cookies", label: "Polityka cookies" },
      { href: "/rodo", label: "RODO" }
    ]
  }
];

// Pobranie kategorii z propsów lub użycie domyślnych
const { categories = defaultCategories } = Astro.props;

// Aktualny rok do stopki
const currentYear = new Date().getFullYear();
---

<footer class="border-t bg-background">
  <div class="container px-4 py-12 md:px-6 md:py-16 lg:py-20">
    <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 lg:gap-12">
      <!-- Logo i opis firmy -->
      <div class="flex flex-col gap-3">
        <a href="/" class="inline-flex items-center space-x-2">
          <span class="text-xl font-bold text-primary">City Hooper</span>
        </a>
        <p class="text-sm text-muted-foreground">
          Inteligentne planowanie podróży z wykorzystaniem sztucznej inteligencji. Odkryj łatwiejszy sposób na organizację swoich wyjazdów.
        </p>
        
        <!-- Media społecznościowe -->
        <div class="mt-3 flex items-center gap-3">
          <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="rounded-full bg-muted p-2 text-foreground hover:bg-primary hover:text-primary-foreground">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
            <span class="sr-only">Twitter</span>
          </a>
          <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" class="rounded-full bg-muted p-2 text-foreground hover:bg-primary hover:text-primary-foreground">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
            <span class="sr-only">Facebook</span>
          </a>
          <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="rounded-full bg-muted p-2 text-foreground hover:bg-primary hover:text-primary-foreground">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
            <span class="sr-only">Instagram</span>
          </a>
        </div>
      </div>
      
      <!-- Kategorie linków -->
      {categories.map(category => (
        <div class="flex flex-col gap-3">
          <h3 class="font-semibold">{category.title}</h3>
          <ul class="flex flex-col gap-2">
            {category.links.map(link => (
              <li>
                <a 
                  href={link.href} 
                  class="text-sm text-muted-foreground transition-colors hover:text-foreground hover:underline"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="mt-12 border-t pt-6">
      <div class="flex flex-col items-center justify-between gap-4 md:flex-row">
        <!-- Prawa autorskie -->
        <p class="text-sm text-muted-foreground">
          &copy; {currentYear} City Hooper. Wszelkie prawa zastrzeżone.
        </p>
        
        <!-- Dodatkowe linki dolne -->
        <div class="flex items-center gap-4">
          <a 
            href="/mapa-strony" 
            class="text-sm text-muted-foreground transition-colors hover:text-foreground hover:underline"
          >
            Mapa strony
          </a>
          <a 
            href="/status" 
            class="text-sm text-muted-foreground transition-colors hover:text-foreground hover:underline"
          >
            Status
          </a>
        </div>
      </div>
    </div>
  </div>
</footer> 