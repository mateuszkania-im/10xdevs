---
import "../styles/global.css";
import PortalRoot from "@/components/PortalRoot";

interface Props {
  title?: string;
}

const { title = "City Hooper - Twórz plany podróży z AI" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Obsługa zdarzeń View Transitions API
      document.addEventListener("astro:page-load", () => {
        // Kod inicjalizujący po załadowaniu strony z View Transitions
      });
    </script>
  </head>
  <body class="min-h-screen bg-background antialiased">
    <PortalRoot client:load>
      <slot />
    </PortalRoot>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style> 