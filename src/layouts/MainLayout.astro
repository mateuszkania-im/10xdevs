---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | CityHooper</title>
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="flex min-h-screen flex-col">
      <header class="sticky top-0 z-40 w-full border-b bg-background">
        <div class="container flex h-16 items-center justify-between py-4">
          <div class="flex items-center gap-2">
            <a href="/" class="font-bold text-xl">CityHooper</a>
          </div>
          <nav class="flex items-center gap-4">
            <a href="/projects" class="text-sm font-medium">Projekty</a>
          </nav>
        </div>
      </header>
      <main class="flex-1">
        <slot />
      </main>
      <footer class="border-t bg-muted py-4">
        <div class="container flex items-center justify-between">
          <p class="text-xs text-muted-foreground">
            &copy; {new Date().getFullYear()} CityHooper. Wszystkie prawa zastrze≈ºone.
          </p>
        </div>
      </footer>
    </div>
  </body>
</html> 